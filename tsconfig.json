{
  "include": [
    "./server/**/*.ts",
    "./lib/**/*.ts",
    "./**/*.ts"
  ],
  "exclude": [
    "./lib/.hc.js"
  ],
  "compilerOptions": {
    "target": "es6", 
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true,
    "files": true
  }
}
